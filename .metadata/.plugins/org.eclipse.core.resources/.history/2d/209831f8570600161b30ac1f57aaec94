package classtimer.main;

public class Timer 
{
	int timeRemaining;
	long timeLast;
	boolean isRunning;
	String soundFile;
	
	public Timer()
	{
		isRunning = false;
		timeRemaining = 0;
		soundFile = JF
	}
	
	public void setTimeToCount(int time)
	{
		timeRemaining = time * 100;
	}
	
	public void start()
	{
		isRunning = true;
		timeLast = System.currentTimeMillis();
	}
	
	public void update()
	{
		timeRemaining -= System.currentTimeMillis() - timeLast;
		if(timeRemaining <= 0)
		{
			
		}
	}
	
	
	private void playFinishedSound()
	{
		SoundPlayer.
	}
}
